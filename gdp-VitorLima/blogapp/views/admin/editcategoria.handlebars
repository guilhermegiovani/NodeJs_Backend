{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar categoria: </h3>
<div class="card">
    <div class="card-body">
        <form lang="pt-br" action="/admin/categorias/edit" method="post">
            <input type="hidden" name="id" value="{{categoria._id}}">

            <label for="nome">Nome: </label>
            <input type="text" value="{{categoria.nome}}" id="nome" name="nome" placeholder="Nome da categoria"
                class="form-control">

            <label for="slug">Slug: </label>
            <input type="text" value="{{categoria.slug}}" id="slug" name="slug" placeholder="Slug da categoria" class="form-control">
            <br>

            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>


